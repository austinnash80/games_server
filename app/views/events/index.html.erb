<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
<h1>Your Events</h1>
</div>


<%= form_tag users_path, :method => 'get' do %>
<p>
    <%= text_field_tag :name, params[:name], placeholder: 'name' %>
    <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
  </p>
<% end %>



<table class="table table-hover">

  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Host</th>
      <th>Sherpa</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime('%m/%d/%y') %></td>
        <td><%= event.time.strftime('%I:%M %P') %></td>
        <td><%= event.location %></td>
        <td><%= event.user.name %></td>
        <td><%= User.find_by(id: event.sherpa_id).name %></td>
        <td><%= event.game.name %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<h4>Want to create an event? <%= link_to 'Select Your Game Here', games_path %></h4>
</div>
<div>
<h4><%= link_to 'Pay for your Event', new_charge_path %></h4>
</div>
