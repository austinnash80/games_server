<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
<h1>Events</h1>
</div>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>User</th>
      <th>Sherpa</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.location %></td>
        <td><%= event.user_id %></td>
        <td><%= event.sherpa_id %></td>
        <td><%= event.game_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<%= link_to 'Have a new event? Pick the game and create event', games_path %>
</div>
<div>
<%= link_to 'Why not pay for the event now?', new_charge_path %>
</div>
