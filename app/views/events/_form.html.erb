<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Event Host: <strong><%= current_user.name %></strong>
    <% form.label :user_id %>
    <%= form.number_field :user_id, id: :event_user_id, value: current_user.id, class: 'display-none' %>
  </div>

  <div class="field">
    Event Game: <strong> <%= @game_name %> </strong> (from previous page)
    <% form.label :game_id %>
    <% form.number_field :game_id, id: :event_game_id %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time, id: :event_time %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location, placeholder: "ex: manly" %>
  </div>

  <div class="field">
    <%= form.label :sherpa_id %>
    <!-- Add selected sherpa as the value eg. value: current_sherpa.id-->
    <%= form.number_field :sherpa_id, id: :event_sherpa_id, placeholder: "Select on next page" %>
  </div>

  <div class="field">
    <%= form.label :game_id %>
    <!-- Add selected game as the value eg. value: current_game.id-->
    <%= form.number_field :game_id, id: :event_game_id, placeholder: "Will be pre-filled above" %>
  </div>

  <div class="actions">
    <%= form.submit "Select Your Sherpa", class: 'btn btn-primary' %>
  </div>
<% end %>
