  </div>

  <div class="field">
    <%# <%= Event Game: <strong> params[:game_name] </strong> %> %>
    Event Game:
    <%= form.label :game_id %>
    <%#= form.number_field :game_id, id: :event_game_id, value: params[:game_id], class: 'display-none' %>
    <%= form.number_field :game_id, id: :game_id %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time, id: :event_time %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location, placeholder: "ex: manly" %>
  </div>

