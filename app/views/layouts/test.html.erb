                            </li>
                        </ul>
                    </div>

                </div>
            </nav><!--nav end-->

        </header>
        <% if user_signed_in? && current_user.player == true %>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">

          <span>Player: <strong><%= current_user.name || current_user.email %></strong></span>
          <%= form_tag events_path, :method => 'get' do %>

              <!-- <%= text_field_tag :user_id, params[:user_id], value: current_user.id, class: 'display-none' %> -->
              <%= submit_tag "My Events", :name => nil, :class => 'remove navbar-link' %>

          <% end %>
          <%= link_to "Home", root_path, :class => 'navbar-link' %> |
          <%= link_to "About Us", aboutus_path, :class => 'navbar-link' %> |
          <%= link_to "Games", games_path, :class => 'navbar-link' %> |
          <%= link_to 'Edit Account', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to 'Chat Rooms', chat_rooms_path, :class => 'navbar-link' %> |
          <%= link_to 'Contact', contact_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        </div>
        </nav>
        <% end %>

        <% if user_signed_in? && current_user.sherpa == true %>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">

          <span>Sherpa: <strong><%= current_user.name || current_user.email %></strong></span>

          <%= form_tag users_path, :method => 'get' do %>

              <%= text_field_tag :name, params[:name], value: current_user.name, class: 'display-none' %>
              <%= submit_tag "My Account", :name => nil, :class => 'remove navbar-link' %>

          <% end %>|
          <!-- <%= link_to "Edit Profile", user_path(current_user), :class => 'navbar-link' %> | -->
          <%# <%= link_to "Edit Profile", user_path(current_user.id), :class => 'navbar-link' %>
          <%= form_tag events_path, :method => 'get' do %>

              <%= text_field_tag :user_id, params[:user_id], value: current_user.id, class: 'display-none' %>
              <%= submit_tag "Your Events", :name => nil, :class => 'remove navbar-link' %>

          <% end %>|


          <%= link_to "Games", games_path, :class => 'navbar-link' %> |
          <!-- <%= link_to 'Edit Account', edit_user_registration_path, :class => 'navbar-link' %> | -->
          <%= link_to 'LiveChat', chat_rooms_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        </div>
        </nav>
        <% end %>

        <% if user_signed_in?  %>
        <% else %>
        <!-- <nav class="navbar navbar-inverse"> -->
          <nav class="navbar navbar-expand-lg yamm">
          <div class="container-fluid">
          <%= link_to "Sign Up", new_user_registration_path, :class => 'nav-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        </div>
        </nav>
        <% end %>

      </div>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
